{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-airbnb",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "baseUrl": "src",
  "paths": {
    "@pages/*": ["./pages/*"],
    "@components/*": ["./components/*"],
    "@assets/*": ["./assets/*"]
  },
  "rules": {
    "import-name": false,
    "interface-name": false,
    "semicolon": [true, "always", "ignore-bound-class-methods"],
    "variable-name": false
  }
}
