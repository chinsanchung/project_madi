{ 
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "strict": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "typeRoots":["./node_modules/@types", "./src/@types"],
    "experimentalDecorators": true,
  },
  "exclude": ["node_modules","__test__","public"]
}
